package com.tns.embedding;

import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;

import androidx.annotation.NonNull;
import androidx.annotation.Nullable;
import androidx.fragment.app.Fragment;
import androidx.navigation.NavController;
import androidx.navigation.Navigation;

import org.nativescript.android.runtime.R;


public class SomeRegularFragment extends Fragment {
    @Nullable
    @Override
    public View onCreateView(@NonNull LayoutInflater inflater, @Nullable ViewGroup container, @Nullable Bundle savedInstanceState) {
        View view = inflater.inflate(R.layout.main_fragment, container, false);

        Button btn = (Button) view.findViewById(R.id.goToNativeScript);
        btn.setOnClickListener((View v) -> {
            NavController controller = Navigation.findNavController(v);
            controller.navigate(R.id.navigation_nativescript);
        });

        return view;
    }
}
